<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<import type="android.view.View" />

		<variable
				name="model"
				type="com.globallogic.musicplayer.ui.home.favouriteTracks.FavouriteTracksViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recycler"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="@{model.hasTracks ? View.VISIBLE : View.GONE}"/>

		<TextView
				android:id="@+id/noMusicTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/no_favourite_tracks"
				android:textColor="@android:color/black"
				android:textSize="20sp"
				android:visibility="@{model.hasTracks ? View.GONE : View.VISIBLE}"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>